// QWAF with HJKL
qwaf_layouts(qwaf)+ctrl(nocaps)

// QWERTY with HJKL
qwaf_layouts(qwerty)+ctrl(nocaps)

// QWAF with HJKL
// ";" locks, Space unlocks
qwaf_layouts(qwaf)+ctrl(nocaps)+qwaf_level5_switch(semic_lock)+qwaf_level5_switch(space_unlock)

// QWAF with HJKL
// ";" locks and unlocks
qwaf_layouts(qwaf)+ctrl(nocaps)+qwaf_level5_switch(semic_lock)

// Deutch (qwertz) QWAF
qwaf_layouts(de)+ctrl(nocaps)

// French (azerty-like) QWAF
qwaf_layouts(fr)+ctrl(nocaps)

// Russian QWAF
// ",m" to change layouts
qwaf_layouts(qwaf)+ctrl(nocaps)+qwaf_letters_cyr(qwaf):2+qwaf_hjkl:2+ctrl(nocaps):2

// International Cyrillic QWAF
// ",m" to change layouts
// Prototypical only, not tested.
qwaf_layouts(qwaf)+ctrl(nocaps)+qwaf_letters_cyr(qwaf_intl):2+qwaf_hjkl:2+ctrl(nocaps):2

// Serbian Cyrillic QWAF
// ",m" to change layouts
// Prototypical only, not tested.
qwaf_layouts(qwaf)+ctrl(nocaps)+qwaf_letters_cyr(qwaf_srp):2+qwaf_hjkl:2+ctrl(nocaps):2

// Dvorak HJKL
qwaf_layouts(qwerty)+qwaf_letters_lat(dvorak)+qwaf_hjkl+ctrl(nocaps)

// Colemak HJKL
qwaf_layouts(qwerty)+qwaf_letters_lat(colemak)+qwaf_hjkl+ctrl(nocaps)

// Workman HJKL
qwaf_layouts(qwerty)+qwaf_letters_lat(workman)+qwaf_hjkl+ctrl(nocaps)

// Dvorak Russian HJKL
// ",m" to change layouts
// Not tested much.
qwaf_layouts(qwaf)+ctrl(nocaps)+qwaf_letters_cyr(qwaf):2+qwaf_letters_cyr(dvorak):2+qwaf_hjkl:2+ctrl(nocaps):2

