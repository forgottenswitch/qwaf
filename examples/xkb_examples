// QWAF with HJKL
qwaf(qwaf)+ctrl(nocaps)

// QWERTY with HJKL
qwaf(qwerty)+ctrl(nocaps)

// QWAF with HJKL
// ";" locks, Space unlocks
qwaf(qwaf)+ctrl(nocaps)+level5_hjkl(semic_lock)+level5_hjkl(space_unlock)

// QWAF with HJKL
// ";" locks and unlocks
qwaf(qwaf)+ctrl(nocaps)+level5_hjkl(semic_lock)+level5_hjkl(space_unlock)

// Deutch (qwertz) QWAF
qwaf(de)+ctrl(nocaps)

// French (azerty-like) QWAF
qwaf(fr)+ctrl(nocaps)

// Russian QWAF
// ",m" to change layouts
qwaf(qwaf)+ctrl(nocaps)+qwaf_cyr(qwaf):2+hjkl:2+ctrl(nocaps):2

// International Cyrillic QWAF
// ",m" to change layouts
// Prototypical only, not tested.
qwaf(qwaf)+ctrl(nocaps)+qwaf_cyr(qwaf_intl):2+hjkl:2+ctrl(nocaps):2

// Serbian Cyrillic QWAF
// ",m" to change layouts
// Prototypical only, not tested.
qwaf(qwaf)+ctrl(nocaps)+qwaf_cyr(qwaf_srp):2+hjkl:2+ctrl(nocaps):2

// Dvorak HJKL
qwaf(dvorak)+hjkl+ctrl(nocaps)

// Colemak HJKL
qwaf(colemak)+hjkl+ctrl(nocaps)

// Workman HJKL
qwaf(workman)+hjkl+ctrl(nocaps)

// Dvorak Russian HJKL
// ",m" to change layouts
// Not tested much.
qwaf(qwaf)+ctrl(nocaps)+qwaf_cyr(dvorak):2+hjkl:2+ctrl(nocaps):2

