# vim: sw=2

# (Mostly) phonetic cyrillic QWAF.
#
# The rarest letters are moved to lv3, in order
# to have identical non-letters with latin variant.
#
# This layout is tested to be a way more ergonomic
# than the standard JCUKEN.
#
symbols "lv1"

  key AD01: Cyrillic_che,    Cyrillic_CHE
  key AD02: Cyrillic_sha,    Cyrillic_SHA
  key AD03: Cyrillic_a,      Cyrillic_A
  key AD04: Cyrillic_ve,     Cyrillic_VE
  key AD05: Cyrillic_ghe,    Cyrillic_GHE
  key AD06: Cyrillic_shorti, Cyrillic_SHORTI
  key AD07: Cyrillic_u,      Cyrillic_U
  key AD08: Cyrillic_o,      Cyrillic_O
  key AD09: Cyrillic_pe,     Cyrillic_PE
  key AD10: Cyrillic_yeru,   Cyrillic_YERU
  key AC01: Cyrillic_ya,     Cyrillic_YA
  key AC02: Cyrillic_es,     Cyrillic_ES
  key AC03: Cyrillic_ie,     Cyrillic_IE
  key AC04: Cyrillic_er,     Cyrillic_ER
  key AC05: Cyrillic_te,     Cyrillic_TE
  key AC06: Cyrillic_ka,     Cyrillic_KA
  key AC07: Cyrillic_en,     Cyrillic_EN
  key AC08: Cyrillic_i,      Cyrillic_I
  key AC09: Cyrillic_el,     Cyrillic_EL
  key AB01: Cyrillic_ze,     Cyrillic_ZE
  key AB02: Cyrillic_zhe,    Cyrillic_ZHE
  key AB03: Cyrillic_tse,    Cyrillic_TSE
  key AB04: Cyrillic_de,     Cyrillic_DE
  key AB05: Cyrillic_be,     Cyrillic_BE
  key AB06: Cyrillic_softsign,   Cyrillic_SOFTSIGN
  key AB07: Cyrillic_em,     Cyrillic_EM

symbols "lv3"
  level 3

  key AD02: Cyrillic_shcha, Cyrillic_SHCHA
  key AD04: Cyrillic_ef, Cyrillic_EF
  key AD07: Cyrillic_yu, Cyrillic_YU
  key AD10: Cyrillic_hardsign, Cyrillic_HARDSIGN

  key AC01: Cyrillic_e,  Cyrillic_E
  key AC03: Cyrillic_io, Cyrillic_IO
  key AC06: Cyrillic_ha, Cyrillic_HA

# Supposed all-in-one cyrillic international layout.
# Not tested, for conflicts with letters_lat(lv3) in particular.
#
symbols "lv3_intl"
  level 3

  key TLDE: U0495,  U0494

  key AE01: Uf537,  Uf536
  key AE02: Cyrillic_u_straight_bar,  Cyrillic_U_straight_bar
  key AE03: Cyrillic_u_straight,  Cyrillic_U_straight
  key AE04: U04e1,  U04e0
  key AE05: Cyrillic_ka_descender,  Cyrillic_KA_descender
  key AE07: Cyrillic_en_descender,  Cyrillic_EN_descender
  key AE08: U04a5,  U04a4
  key AE09: Cyrillic_schwa,  Cyrillic_SCHWA
  key AE10: U04c4,  U04c3
  key AE12: Cyrillic_ghe_bar,  Cyrillic_GHE_bar

  key AD03: U04ab, U04aa
  key AD05: Ukrainian_ghe_with_upturn, Ukrainian_GHE_WITH_UPTURN
  key AD06: U048b,  U048a
  key AD08: Cyrillic_o_bar,  Cyrillic_O_bar
  key AD09: U04d5, U04d4

  level 1

  key AD11: dead_acute, Cyrillic_shha, Cyrillic_che_vertstroke, Cyrillic_CHE_vertstroke
  key AD12: dead_grave, Cyrillic_SHHA, Cyrillic_ka_vertstroke,  Cyrillic_KA_vertstroke

  level 3

  key AC01: U0499, U0498
  key AC08: Ukrainian_i,  Ukrainian_I
  key AC11: dead_macron, dead_belowmacron

  key AB03: Cyrillic_zhe_descender,  Cyrillic_ZHE_descender
  key AB05: Ukrainian_ie, Ukrainian_IE
  key AB10: U04a1,  U04a0



# Supposed as what-languages-remain all-in-one cyrillic international layout.
# Not tested.
#
symbols "lv3_srp"
  level 3

  # srp

  key AE02: U452, U402
  key AE03: U45A, U40A
  key AE04: U45F, U40F
  key AE05: U45B, U40B
  key AE07: U458, U408

  key AD09: U459, U409

  # bg

  key AD05: U45d, U40d

  key AC03: U463, U462

  key AB03: U46d, U46c
  key AB10: U46b, U46a

# Supposed as a cyrillic phonetic layout for Dvorak user.
# Not tested, but intended to have better ergonomics than standard JCUKEN.
#
symbols "lv1_dvorak"
  level 1

  key AD03: Cyrillic_el,    Cyrillic_EL
  key AD04: Cyrillic_pe,    Cyrillic_PE
  key AD05: Cyrillic_shorti,Cyrillic_SHORTI
  key AD06: Cyrillic_ya,    Cyrillic_YA
  key AD07: Cyrillic_ghe,   Cyrillic_GHE
  key AD08: Cyrillic_ka,    Cyrillic_KA
  key AD09: Cyrillic_er,    Cyrillic_ER
  key AD10: Cyrillic_sha,   Cyrillic_SHA

  key AC01: Cyrillic_e,     Cyrillic_E
  key AC02: Cyrillic_o,     Cyrillic_O
  key AC03: Cyrillic_ie,    Cyrillic_IE
  key AC04: Cyrillic_a,     Cyrillic_A
  key AC05: Cyrillic_i,     Cyrillic_I
  key AC06: Cyrillic_es,    Cyrillic_ES
  key AC07: Cyrillic_zhe,   Cyrillic_ZHE
  key AC08: Cyrillic_te,    Cyrillic_TE
  key AC09: Cyrillic_en,    Cyrillic_EN

  key AB01: Cyrillic_tse,   Cyrillic_TSE
  key AB02: Cyrillic_che,   Cyrillic_CHE
  key AB03: Cyrillic_softsign, Cyrillic_SOFTSIGN
  key AB04: Cyrillic_de,    Cyrillic_DE
